<%- include('./partials/header.ejs') %>
    
    <div class="register-photo">
        <div class="form-container">
            <div class="image-holder"></div>
            <form method="post" action="/signup" id="signup-form">
                <h2 class="text-center"><strong>Create</strong> an account.</h2>
                <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
                <div class="form-group"><input class="form-control" type="password" name="password" id="pass1" placeholder="Password"></div>
                <div class="form-group"><input class="form-control" type="password" name="password-repeat" id="pass2" placeholder="Password (repeat)"></div>
                <div id="pass-warning" style="color: red;text-align: center;"></div>
                <!-- <div class="form-group">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox">I agree to the license terms.</label></div>
                </div> -->
                <div class="form-group"><button class="btn btn-primary btn-block" onclick="validation()" type="button">Sign Up</button></div><a class="already" href="/login">You already have an account? Login here.</a></form>
        </div>
    </div>
<script src="/assets/js/jquery.min.js"></script>
<script >
    function validation(){
        p1=$("#pass1").val();
        p2=$("#pass2").val();
        if(p1===p2){
            $("#signup-form").submit();
        }
        else{
            $("#pass-warning").text("Password not matched");
        }
    }
</script>
